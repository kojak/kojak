# Uncomment to debug script
#set -x

# Load services configuration
DIR=$(dirname $( cd $(dirname $0) ; pwd -P ))
. $DIR/init-service-accounting
loadServices

dir=$(dirname $0)
for toolcfg in $dir/config.d/*.sh
do
    sh $toolcfg
done

echo -e "\nBringing the system up...\n"
for svc in $SERVICES
do
   service $(basename $svc) restart
done

echo -e "\nConfiguration complete...Kojak is AOK"
