# Uncomment to debug script
#set -x

# Check to see if user is root
if [ "${USER}" != "root" ]; then
    echo -e "\n# This script requires root priviledges to run"
    exit
fi

# Load services configuration
DIR=$(dirname $( cd $(dirname $0) ; pwd -P ))
$DIR/init-service-accounting

for svc in $SERVICES; do
  chkconfig $svc off
  service $svc stop
done

# Remove package
yum -y remove httpd postgresql-server koji koji-hub koji-web koji-utils koji-hub-plugins koji-vm koji-builder mock

echo -e "\nRunning tool uninstalls...\n"
for tooluninst in uninstall.d/*.sh
do
    sh ./uninstall.d/$tooluninst
done

# Remove configuration files
CFG_DIRS="/var/tmp/kojak /mnt/koji /etc/koji* /home/koji /etc/httpd /var/log/httpd /etc/pki/koji /tmp/*.patch /var/lib/pgsql /var/lib/mock"
for dir in ${CFG_DIRS}; do rm -rf $dir || echo "$dir not found"; done

# Remove log files
LOG_FILES="/var/log/kojira.log
/var/log/kojid.log
${HOME}/kickstart.log
${HOME}/kojak.log
/etc/yum.repos.d/epel.repo"
for file in ${LOG_FILES}; do rm -f $file || echo "$file not found"; done

# Remove users and groups
USERS="koji mock kojibuilder postgres apache"
for user in ${USERS}; do userdel -rf $user; groupdel $user; done

# Update mlocate database
echo -e "\nUpdating file datatabse...please be paitient."
cd /
updatedb
ORIG_FILES=$(locate *.orig)
for file in ${ORIG_FILES}; do cat $file > $(echo $file | sed "s/\.orig$//") && rm -f $file || echo "$file not found"; done
updatedb
echo -e "Uninstalltion complete."
